            <image xlink:href="<%= image_path("menuicon/icon-menu.svg") %>" src="<%= image_path("menuicon/icon-png2x.png") %>" width="25" height="25" alt="Menu icon"></image>
          </svg></a>
        </div>
    </div>
    <nav>
        <ul>
            <% if user_signed_in? %>
                
                <li><%= link_to "My victories", root_url + current_user.profile_name %></li>
