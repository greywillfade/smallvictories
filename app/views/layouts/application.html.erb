  <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300|Raleway:100,300|Didact+Gothic' rel='stylesheet' type='text/css'>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta charset="utf-8"/>
